@using Blog_Site.Models
@model Post
<!-- Blog entry Start -->
<div class="w3-card-4 w3-margin w3-white">
    <img src="~/images/@Model.Images" alt="Nature" style="width:100%">
    <div class="w3-container">
        <hr>
        <h3><b>@Model.Title</b></h3>
        <hr>
        <h5>@Model.SubTitle, <span class="w3-opacity">@Model.Date<span></h5>
    </div>
    <hr>
    <div class="w3-container">
        <p>
            @Model.Content
        </p>
    </div>
</div>
<!-- Blog entry End -->